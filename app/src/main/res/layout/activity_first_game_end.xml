<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/IV_vocap_logo_jeu1_end"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vocap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IV_home_icon_jeu1_end"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/IV_bravo_jeu1_end"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="170dp"
        android:foregroundGravity="center"
        android:src="@mipmap/bravo_icon_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/TV_displaying_final_score_jeu1"
        android:layout_width="323dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/IV_bravo_jeu1_end"
        app:layout_constraintStart_toStartOf="@+id/IV_bravo_jeu1_end"
        app:layout_constraintTop_toBottomOf="@+id/IV_bravo_jeu1_end" />


    <Button
        android:id="@+id/B_back_to_home_jeu1_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/homePage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IV_bravo_jeu1_end"
        app:layout_constraintVertical_bias="0.866" />


</android.support.constraint.ConstraintLayout>
